@using Toys.Areas.Matrix_Admin.ViewModels.ToysModel
@model ToysIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Toys</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="toys" asp-area="Matrix-admin">Create Toys</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>CreateAt</th>
                                        <th>ModifiedAt</th>
                                        <th>Photo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var toys in Model.GetToys)
                                    {
                                        <tr>
                                            <td>@toys.Id</td>
                                            <td>@toys.Title</td>
                                            <td>@toys.Price</td>
                                            <td>@toys.Category.CategoryTitle</td>
                                            <td>@toys.Description</td>
                                            <td>@toys.CreatedAt.ToShortDateString()/  @toys.CreatedAt.ToShortTimeString()</td>
                                            <td>@toys.ModifiedAt.ToShortDateString()/  @toys.ModifiedAt.ToShortTimeString()</td>
                                            <td>
                                                <img style="width:50px; height:70px" src="~/Images/@toys.ImageURl" />
                                            </td>
                                            <td>
                                                <form asp-validatio-summary="ModelOnly" enctype="multipart/form-data" method="post" asp-action="delete" asp-route-id="@toys.Id" asp-controller="toyscategory" asp-area="matrix-admin" class="forms-sample">

                                                    <button class="btn btn-danger">Delete</button>
                                                </form>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="toys" asp-area="Matrix-admin" asp-route-id="@toys.Id">Update</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>