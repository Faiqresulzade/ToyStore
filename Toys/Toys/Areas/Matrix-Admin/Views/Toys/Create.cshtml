@using Toys.Areas.Matrix_Admin.ViewModels.ToysModel
@model ToysCreateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create Toys Category
                        </p>
                        <form asp-validatio-summary="ModelOnly" enctype="multipart/form-data" method="post" asp-action="create" asp-controller="toys" asp-area="matrix-admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input required class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image">Image</label>
                                <input class="form-control" asp-for="Image">
                                <span asp-validation-for="Image"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ToysCategoryId"></label>
                                <select class="form-select" asp-for="ToysCategoryId" asp-items="Model.Toys_Category"></select>
                                <span asp-validation-for="ToysCategoryId"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" href="../">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>