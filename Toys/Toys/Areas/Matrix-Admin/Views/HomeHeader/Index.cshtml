@using Toys.Areas.Matrix_Admin.ViewModels.HomeHeaderVM
@model HomeHeaderIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Header</h4>
                          <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            <th>Text</th>
                                            <th>Modifie At</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.GetHomeHeader.Id</td>
                                            <td>@Model.GetHomeHeader.Title</td>
                                            <td>@Model.GetHomeHeader.Text</td>
                                            <td>@Model.GetHomeHeader.ModifiedAt</td>
                                            <td>
                                            <a class="btn btn-primary" asp-area="Matrix-admin" asp-controller="homeheader" asp-action="update"  asp-route-id="@Model.GetHomeHeader.Id">Update</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>