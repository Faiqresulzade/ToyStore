@using Toys.ViewModels.Contact
@model ContactMessageVM

<div class="contact ">
    <div class="container">
        <div class="row">
            <div class="question-answer col-lg-12">
                <div class="contact-img col-xl-6">
                    <img src="./assets/Img/creative-image-copyright.webp" alt="">
                </div>
                <div class="contact-form col-xl-6 col-lg-12">
                    <h3>Связаться с нами</h3>
                    <h1>Есть вопросы? </h1>
                    <form asp-validatio-summary="ModelOnly" method="post">
                        <div class="question row">
                            <div class="name-input col-lg-6 col-md-12">
                                <input required asp-for="Name" type="text" placeholder="Имя">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="email-input col-lg-6 col-md-12">
                                <input required asp-for="Email" type="email" placeholder="Электронная почта">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="phone-input col-lg-6  col-md-12">
                                <input required asp-for="Number" type="tel" placeholder="Номер телефона">
                                <span asp-validation-for="Number"></span>
                            </div>
                            <div class="subject-input col-lg-6  col-md-12">
                                <input required asp-for="Subject" type="text" placeholder="Тема">
                                <span asp-validation-for="Subject"></span>
                            </div>
                            <div class="message-input col-lg-12  col-md-12">
                                <textarea required asp-for="Text" placeholder="Опишите развернуто тему обращения.."></textarea>
                                <span asp-validation-for="Text"></span>
                            </div>
                            
                            <span>@Model?.ErrorMessage</span>

                            
                            <div class="question-button col-lg-12  col-md-12">
                                <button type="submit">Отправить</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
